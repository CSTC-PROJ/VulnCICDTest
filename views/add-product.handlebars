<h1>Add New Product</h1>
<form action="/add-product" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required><br>

    <label for="description">Description:</label>
    <textarea id="description" name="description"></textarea><br>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" step="0.01" value="0.00"><br>

    <label for="internal_cost">Internal Cost:</label>
    <input type="number" id="internal_cost" name="internal_cost" step="0.01" value="0.00"><br>

    <label for="is_active">Is Active (0 or 1):</label>
    <input type="number" id="is_active" name="is_active" value="1"><br>

    <button type="submit">Add Product</button>
</form>
